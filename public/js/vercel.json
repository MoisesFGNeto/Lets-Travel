{
  "version": 2,
  "builds": [
    {
      "src": "app.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/posts/(.*)",
      "dest": "/posts/$1"
    },
    {
      "src": "/callback-requests/(.*)",
      "dest": "/callback-requests/$1"
    },
    {
      "src": "/emails/(.*)",
      "dest": "/emails/$1"
    },
    {
      "src": "/users/(.*)",
      "dest": "/users/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ]
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Page</title>
    <link
      href="https://fonts.cdnfonts.com/css/melancholy-serif"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/CSS/bootstrap.min.css" />
    <link rel="stylesheet" href="/CSS/all.min.css" />
    <link rel="stylesheet" href="/CSS/style.css" />
  </head>
  <body>
    <header class="mt-2">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand btn" href="/">Let's Travel</a>
          <div class="">
            <div class="form-check form-switch ms-auto mt-1 me-4">
              <label class="form-check-label ms-1" for="lightSwitch">
                <i class="fa-regular fa-lightbulb"></i>
              </label>
              <input class="form-check-input" type="checkbox" id="lightSwitch" role="switch" onclick="setDarkMode()"/>
            </div>
          </div>
          <button class="navbar-toggler btn btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class=" navbar-nav me-auto mb-2 mt-2 mb-lg-0">
              <li class="nav-item">
                <button class="log-out-btn btn btn-outline-secondary ml-1">
                  Log Out
                </button>
              </li>
            </ul>
            <form class="call-me-form d-flex">
              <input class="phone-input form-control me-2" type="tel" placeholder="Phone number" aria-label="Phone number"/>
              <button class="btn btn-outline-primary text-nowrap" type="submit">
                Call me
              </button>
            </form>
          </div>
        </div>
      </nav>
    </header>
    <main class="main">
      <div class="admin-box container-fluid shadow p-3 mb-5 bg-body rounded">
        <h1 class="text-center admin">Admin Page</h1>
        <hr />
        <div class="d-flex align-items-start flex-wrap flex-lg-nowrap">
          <div class="nav flex-column nav-pills me-3 border rounded col-12 col-lg-3 p-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <button class="nav-link active" id="v-pills-articles-tab" data-bs-toggle="pill" data-bs-target="#v-pills-articles" type="button" role="tab" aria-controls="v-pills-articles" aria-selected="true">
              Articles
            </button>
            <button class="nav-link" id="v-pills-mails-tab" data-bs-toggle="pill" data-bs-target="#v-pills-mails" type="button" role="tab" aria-controls="v-pills-mails" aria-selected="false">
              Mails
            </button>
            <button class="nav-link" id="v-pills-requests-tab" data-bs-toggle="pill" data-bs-target="#v-pills-requests" type="button" role="tab" aria-controls="v-pills-requests" aria-selected="false">
              Callback requests
            </button>
            <button class="nav-link d-none" id="v-pills-add-post-tab" data-bs-toggle="pill" data-bs-target="#v-pills-add-post" type="button" role="tab" aria-controls="v-pills-add-post" aria-selected="false">
              Creat post
            </button>
            <button class="nav-link d-none" id="v-pills-update-post-tab" data-bs-toggle="pill" data-bs-target="#v-pills-update-post" type="button" role="tab" aria-controls="v-pills-update-post" aria-selected="false">
              Update post
            </button>
          </div>
          <div class="tab-content border rounded col-12 col-lg-9 p-3" id="v-pills-tabContent">
            <div class=" tab-pane table-responsive fade show active" id="v-pills-articles" role="tabpanel" aria-labelledby="v-pills-articles-tab">
              <button class="add-post btn btn-primary mb-3">Add post</button>
              <table class="articles-list table">
                <tbody></tbody>
              </table>
            </div>
            <div class="tab-pane table-responsive fade" id="v-pills-mails" role="tabpanel" aria-labelledby="v-pills-mails-tab">
              <table class="table">
                <tbody></tbody>
              </table>
            </div>
            <div class="tab-pane table-responsive fade" id="v-pills-requests" role="tabpanel" aria-labelledby="v-pills-requests-tab">
              <table class="table">
                <tbody></tbody>
              </table>
            </div>
            <div class="tab-pane table-responsive fade" id="v-pills-add-post" role="tabpanel" aria-labelledby="v-pills-add-post">
              <h1>Creat post</h1>
              <form class="create-post-form">
                <div class="mb-3">
                  <label for="title" class="mb-1">Title*</label>
                  <input type="text" placeholder="Title" class="form-control post-input" id="title"/>
                </div>
                <div class="mb-3">
                  <label for="country" class="form-label">Country*</label>
                  <input type="text" placeholder="Country" class="form-control post-input" id="country"/>
                </div>
                <div class="mb-3">
                  <label for="imageURL" class="mb-1">Image</label>
                  <input type="url" placeholder="URL" class="form-control post-input" id="imageURL"/>
                </div>
                <div class="mb-3">
                  <label for="image-file" class="mb-1">or</label>
                  <input type="file" class="form-control post-input" id="image-file" />
                </div>
                <div class="mb-3">
                  <label for="text" class="mb-1">Text*</label>
                  <textarea class="form-control post-input" id="text" cols="30" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                  Creat post
                </button>
                <a href="/admin" class="btn btn-primary" id="cancel-btn">Cancel</a>
              </form>
            </div>
            <!-- Update form -->
            <div class="tab-pane fade" id="v-pills-update-post" role="tabpanel" aria-labelledby="v-pills-update-post" tabindex="0">
              <h1>Update post</h1>
              <form class="update-post-form">
                <div class="mb-3">
                  <label for="update-title" class="form-label">Title</label>
                  <input type="text" placeholder="Title" class="form-control title-update" id="update-title"/>
                </div>
                <div class="mb-3">
                  <label for="update-text" class="mb-1">Text</label>
                  <textarea class="form-control text-update" id="update-text" cols="30" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                  Update post
                </button>
                <a href="/admin" class="btn btn-primary" id="cancel-btn">Cancel</a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="/admin/js/create-post.js"></script>
    <script src="/admin/js/delete-post.js"></script>
    <script src="/admin/js/update-post.js"></script>
    <script src="/admin/js/main.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
